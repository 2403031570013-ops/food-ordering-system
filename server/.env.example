# MongoDB Atlas Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/databaseName
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/foodOrderingDB

# JWT Secret Key (use a strong, random string - minimum 32 characters)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production_min_32_chars

# Server Port
PORT=5000

# Email Configuration (for OTP and notifications)
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password_for_gmail

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Environment
NODE_ENV=development
